desde  formularios de importación de Django  
#SECCION DE FORM PARA QUE NO SE EXTIENDA EL VIEW Y SEA MAS LEGIBLE
#A TRAVES DE WIDGET Y LOS ATRIBUTOS SE EDITAN LA VISTA DE LOS FORMULARIOS
clase  EmpleadoForm ( formularios . Formulario ):
    nombre  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                             etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese su nombre' }))
    apellido  =  formas . CharField ( max_length = 50, requerido = Verdadero ,
                                etiqueta = '' , widget = formularios . TextInput ( attrs = { 'class' : "form-control" , 'placeholder' : 'Ingrese su apellido' }))
    presentación  =  formularios . CharField ( max_length = 256 , requerido = Verdadero ,
                                   etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese su presentacion' , "estilo" : "altura: 10rem" }))
    experiencia  =  formas . CharField ( max_length = 256 , requerido = Verdadero ,
                                  etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese sus experiencias' , "estilo" : "altura: 10rem" }))
    estudios  =  formas . CharField ( max_length = 256 , requerido = Verdadero ,
                               etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese sus estudios' , "estilo" : "altura: 10rem" }))


clase  TrabajoForm ( formularios.formulario ) : _
    carga  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                             etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "control-formulario" , 'marcador de posición' : 'Ingrese el cargo' }))
    detalles  =  formas . CharField ( max_length = 256 , requerido = Verdadero ,
                                etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese los detalles' , "estilo" : "altura: 10rem" }))
    ubicacion  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                                   etiqueta = '' , widget = formularios . TextInput ( attrs = { 'class' : "form-control" , 'placeholder' : 'Ingrese la ubicación' }))
    sueldo  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                                  etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese el sueldo' }))

clase  EmpleadorForm ( formularios.formulario ) : _
    nombre  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                             etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "form-control" , 'placeholder' : 'Ingrese su nombre' }))
    apellido  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                                etiqueta = '' , widget = formularios . TextInput ( attrs = { 'class' : "form-control" , 'placeholder' : 'Ingrese su apellido' }))
    edad  =  formas . Campo entero ( requerido = Verdadero ,
                                   etiqueta = '' , widget = formularios . TextInput ( attrs = { 'class' : "form-control" , 'placeholder' : 'Ingrese su edad' }))
    profesión  =  formas . CharField ( max_length = 50 , requerido = Verdadero ,
                                  etiqueta = '' , widget = formularios . TextInput ( attrs = { 'clase' : "control-formulario" , 'marcador de posición' : 'Ingrese a su profesión' }))
    nombreEmpresa  =  formularios . CharField ( max_length = 50 , requerido = Verdadero ,
                                etiqueta = '' , widget = formularios . TextInput ( attrs = { 'class' : "form-control" , 'placeholder' : 'Ingrese el nombre de la empresa' }))
